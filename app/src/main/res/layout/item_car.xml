<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#D2FAD2"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/carImage"
            android:layout_width="250dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/carBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/carImage"
            android:layout_marginStart="16dp"
            android:text="Brand"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/carModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carBrand"
            android:layout_toEndOf="@id/carImage"
            android:layout_marginStart="16dp"
            android:text="Model"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/carPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carModel"
            android:layout_toEndOf="@id/carImage"
            android:layout_marginStart="16dp"
            android:text="Price"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:id="@+id/carYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carPrice"
            android:layout_toEndOf="@id/carImage"
            android:layout_marginStart="16dp"
            android:text="Year"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/carBodyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carYear"
            android:layout_toEndOf="@id/carImage"
            android:layout_marginStart="16dp"
            android:text="Body Type"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
